{
    "name": "experiment_name",
    "n_gpu": 1,
    "arch": {
        "type": "FastSpeech",
        "args": {
            "model_config": {}
        }
    },
    "dataset": {
        "type": "LJSpeechDataset",
        "args": {}
    },
    "dataloader": {
        "type": "LJSpeechDataloader",
        "args":{
            "batch_size": 16,
            "batch_expand_size": 32,
            "num_workers": 0
        }
    },
    "optimizer": {
        "type": "AdamW",
        "args":{
            "lr": 0.001,
            "betas": [0.9, 0.98],
            "eps": 1e-9
        }
    },
    "loss": {
        "type": "FastSpeechLoss",
        "args": {}
    },
    "lr_scheduler": {
        "type": "OneCycleLR",
        "args": {
            "steps_per_epoch": 12800,
            "epochs": 100,
            "anneal_strategy": "cos",
            "max_lr": 0.001,
            "pct_start": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "log_step": 10,
        "validation_text": "You can not improve your past, but you can improve your future. Once time is wasted, life is wasted.",

        "visualize": "wandb",
        "wandb_project": "fastspeech_example"
    }
}
