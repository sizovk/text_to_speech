{
    "name": "experiment_name",
    "n_gpu": 1,
    "arch": {
        "type": "FastSpeech",
        "args": {
            "model_config": {}
        }
    },
    "dataset": {
        "type": "LJSpeechDataset",
        "args": {}
    },
    "dataloader": {
        "type": "LJSpeechDataloader",
        "args":{
            "batch_size": 16,
            "batch_expand_size": 32,
            "num_workers": 0
        }
    },
    "optimizer": {
        "type": "AdamW",
        "args":{
            "lr": 0.001,
            "betas": [0.9, 0.98],
            "eps": 1e-9
        }
    },
    "loss": {
        "type": "FastSpeechLoss",
        "args": {}
    },
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "log_step": 10,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "visualize": "wandb",
        "wandb_project": "kek_project"
    }
}
